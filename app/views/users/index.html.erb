

<h1>Users</h1>





<table>
  <% @teachers.each do |pupil| %>
  <tr>
    <td><%= pupil.first_name %></td>
    <td><%= pupil.last_name %></td>

    <%end%>
</table>



<%= link_to("Add a user",'users/new')%>
<table style="width:65%">
  <tr>
    <th>User ID</th>
    <th>First-name</th>
    <th>Last-name</th>
    <th>Username</th>
    <th>Password</th>
    <th>Role</th>

  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.username %></td>
    <td><%= user.password%></td>
    <td><%= user.role %></td>



    <td>
      <%= link_to("Show", user_path(user), :class => 'action show') %>
      <%= link_to("Edit", edit_user_path(user), :class => 'action edit') %>
      <%= link_to("Delete", user_path(user), :class => 'action delete', :method => :delete) %>
    </td>

  </tr>
<%end%>
</table>
